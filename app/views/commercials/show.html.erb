<div class="stimulus-container"
data-controller="commercial-modal">
  <div class="container">
    <div class="row mb-4">
      <div class="col-12 col-lg-9">
        <div style="padding:56.25% 0 0 0;position:relative;margin-bottom:3vh;">
          <iframe src="https://player.vimeo.com/video/<%=@commercial.vimeo_id%>?h=ca3212cbf5&byline=0&portrait=0" style="position:absolute;top:0;left:0;width:100%;height:100%;" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen></iframe>
        </div><script src="https://player.vimeo.com/api/player.js"></script>
        <%= link_to  "edit", edit_commercial_path(@commercial) if current_user%>
      </div>
      <div class="col-12 col-lg-3">
        <h2><%= @commercial.title %></h2>
        <h5><%= @commercial.year %></h3>
        <h5></h5>
        <p>que achas</p>
        <h3>desta ideia?</h3>
        <h5>acho que sim, senhor</h5>
        <h6>é uma belíssima ideia</h6>
      </div>
    </div>
    <div class="row">
      <div class="photo-grid-container">
        <% @commercial.photos.each do |photo| %>
          <div class="photo"
          data-action="click->commercial-modal#largeImage">
            <%= image_tag photo, style:"width:100%", class:"modal-photo"  %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-body">
          <%= image_tag @commercial.photos.first, class: "modal-img", data: {commercial_modal_target: 'image'} %>
        </div>
      </div>
    </div>
  </div>
</div>
