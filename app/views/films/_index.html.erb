<div class="card-container">
  <% @films.each do |film| %>
    <%= link_to film_path(film) do %>
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= url_for(film.cover_photo) if film.cover_photo.attached? %>');">
          <p class="card-text"><%= film.title %></p>
      </div>
    <% end %>
  <% end %>
</div>

<div class="side-bar d-flex flex-column" style="">
  <p class="side-bar-p">
    <i class="fa-solid fa-filter"></i>
      <span class="side-bar-span">
        <%= link_to  "Narrative", narrative_path, class:"side-bar-link" %>
        <%= link_to  "Docs", docs_path, class:"side-bar-link"  %>
        <%= link_to  "Dubbing", dubbing_path, class:"side-bar-link"  %>
      </span>
  </p>
</div>
<div class="hidden-links-phone">
  <%= link_to  "Narrative", narrative_path, class:"side-bar-link phone" %>
  <%= link_to  "Docs", docs_path, class:"side-bar-link phone"  %>
  <%= link_to  "Dubbing", dubbing_path, class:"side-bar-link phone"  %>
</div>
